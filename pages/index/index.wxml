<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image 
        class="userinfo-avatar"
        bindtap="bindViewTap" 
        data-url="{{userInfo.avatarUrl}}" 
        src="{{userInfo.avatarUrl}}" 
        background-size="cover" 
      />
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <!-- <button class="weui-btn" type="primary" bindtap="chooseImg">请选择照片</button> -->
  <swiper 
    indicator-dots
    autoplay="{{autoplay}}" 
    class='swiper'
    circular
  >
    <block wx:for="{{imgUrls}}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" class="slide-image" height="150"/>
      </swiper-item>
    </block>
  </swiper>
  <view class='control-bt-wrap'>
    <button class="weui-btn" type="primary" bindtap="changeAutoplay"> autoplay </button>
  </view>
</view>
